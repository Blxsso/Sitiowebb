@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Manager")]
@model Sitiowebb.Pages.ManagerOnly.DayDetailsModel

@{
    ViewData["Title"] = "Day details";
}

<div class="container-xxl py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4 mb-0">
            Availability – @Model.TargetDate.ToString("dddd, dd MMMM yyyy")
        </h2>

        <a class="btn btn-outline-secondary"
           asp-page="./Calendar"
           asp-route-month="@Model.TargetDate.Month"
           asp-route-year="@Model.TargetDate.Year">
            « Back to calendar
        </a>
    </div>

    <table class="table table-striped align-middle">
        <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Status</th>
            <th>Half</th>
            <th>From</th>
            <th>To</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var e in Model.Employes)
        {
            <tr>
                <td>@e.Name</td>
                <td>@e.Email</td>
                <td>@e.Status</td>
                <td>@(string.IsNullOrWhiteSpace(e.Half) ? "-" : e.Half)</td>
                <td>@(e.From?.ToString("dd/MM/yyyy") ?? "-")</td>
                <td>@(e.To?.ToString("dd/MM/yyyy") ?? "-")</td>
            </tr>
        }
        </tbody>
    </table>
</div>
