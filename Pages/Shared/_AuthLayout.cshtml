@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Auth";
}
<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@title Â· Sitiowebb</title>

  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" />
  <!-- Iconos (para el candado, email, etc.) -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

  <style>
    .auth-wrap{min-height:100vh;display:grid;place-items:center;background:linear-gradient(180deg,#f8fafc,#eef2f7)}
    .auth-card{width:min(520px,92vw);background:#fff;border-radius:16px;padding:32px 28px;
               box-shadow:0 10px 30px rgba(0,0,0,.08),0 2px 10px rgba(0,0,0,.04);border:1px solid #eef1f4}
    .auth-title{font-weight:800;font-size:clamp(26px,4vw,40px);line-height:1.1;text-align:center;margin-bottom:.25rem}
    .auth-sub{color:#6c757d;text-align:center;margin-bottom:1.5rem}
    .form-control-lg{padding:.9rem 1rem;font-size:1.05rem;border-radius:12px}
    .input-group>.input-group-text{border-top-left-radius:12px;border-bottom-left-radius:12px}
    .btn-green{background:#34a853;border-color:#34a853}
    .btn-green:hover{background:#2e9449;border-color:#2e9449}
  </style>
</head>
<body>
  <div class="auth-wrap">
    <main class="auth-card">
      @RenderBody()
    </main>
  </div>
  @RenderSection("Scripts", required:false)
</body>
</html>
